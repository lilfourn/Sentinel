{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "Sentinel",
  "version": "0.2.7",
  "identifier": "com.sentinel.filemanager",
  "build": {
    "beforeDevCommand": "npm run dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "npm run build",
    "frontendDist": "../dist"
  },
  "app": {
    "macOSPrivateApi": true,
    "windows": [
      {
        "title": "Sentinel",
        "width": 1200,
        "height": 800,
        "minWidth": 800,
        "minHeight": 600,
        "transparent": true,
        "decorations": true,
        "titleBarStyle": "Overlay",
        "hiddenTitle": true,
        "dragDropEnabled": false
      }
    ],
    "security": {
      "csp": "default-src 'self'; script-src 'self' https://clerk.app-sentinel.dev https://*.clerk.dev https://*.clerk.accounts.dev 'unsafe-inline'; style-src 'self' 'unsafe-inline'; worker-src 'self' blob:; connect-src 'self' ipc: ipc://localhost tauri: http://localhost:12753 https://*.convex.cloud https://api.anthropic.com https://api.openai.com https://api.stripe.com https://*.clerk.dev https://*.clerk.accounts.dev https://clerk.app-sentinel.dev wss://*.convex.cloud https://github.com https://api.github.com https://raw.githubusercontent.com; img-src 'self' data: https: blob:; font-src 'self' data:; frame-src 'self' https://*.clerk.dev https://*.clerk.accounts.dev https://clerk.app-sentinel.dev"
    },
    "withGlobalTauri": true
  },
  "bundle": {
    "active": true,
    "targets": ["app", "dmg", "nsis", "appimage"],
    "createUpdaterArtifacts": true,
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "macOS": {
      "entitlements": "Entitlements.plist",
      "minimumSystemVersion": "10.15",
      "dmg": {
        "background": "installer-assets/dmg-background.png",
        "windowSize": { "width": 660, "height": 400 },
        "appPosition": { "x": 180, "y": 190 },
        "applicationFolderPosition": { "x": 480, "y": 190 }
      }
    },
    "windows": {
      "nsis": {
        "headerImage": "installer-assets/nsis-header.bmp",
        "sidebarImage": "installer-assets/nsis-sidebar.bmp"
      }
    }
  },
  "plugins": {
    "shell": {
      "open": true
    },
    "deep-link": {
      "mobile": [],
      "desktop": {
        "schemes": ["sentinel"]
      }
    },
    "updater": {
      "endpoints": [
        "https://github.com/lilfourn/Sentinal/releases/latest/download/latest.json"
      ],
      "pubkey": "dW50cnVzdGVkIGNvbW1lbnQ6IG1pbmlzaWduIHB1YmxpYyBrZXk6IDAxNEZCRUI1NkYzOTQ3MkIKUldRclJ6bHZ0YjVQQVROYWt6a1lkazdFQkRMQUlLbDVOc2prR2JhZHlSd1FFNllkRkpBbU5UVTMK"
    }
  }
}
