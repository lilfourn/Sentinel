{
  "$schema": "../gen/schemas/desktop-schema.json",
  "identifier": "default",
  "description": "Sentinel File Manager capabilities",
  "windows": ["main"],
  "permissions": [
    "core:default",
    "core:window:allow-start-dragging",
    "opener:default",
    "fs:default",
    "fs:allow-read",
    "fs:allow-write",
    "fs:allow-exists",
    "fs:allow-mkdir",
    "fs:allow-remove",
    "fs:allow-rename",
    "fs:allow-copy-file",
    "fs:allow-read-dir",
    "fs:allow-read-file",
    "fs:allow-read-text-file",
    "fs:allow-stat",
    "macos-permissions:default",
    "deep-link:default",
    "updater:default",
    "dialog:default",
    "process:allow-restart"
  ]
}
